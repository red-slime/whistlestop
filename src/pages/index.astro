		<script>
			// Handle map button
			document.addEventListener("DOMContentLoaded", () => {
				let isMapOpen = false;
				const scheduleContainer = document.getElementById("schedule-container");
				const mapImage = document.getElementById("map");
				const mapButton = document.getElementById("map-button");
				const schedule = document.getElementById("schedule-content");

				mapButton.addEventListener("click", () => {
					if (!isMapOpen) {
						mapButton.textContent = "Close the Map";
						scheduleContainer.classList.add("open");
						schedule.classList.add("shrink");
						mapImage.classList.add("expand");
					} else {
						mapButton.textContent = "View the Map";
						scheduleContainer.classList.remove("open");
						schedule.classList.remove("shrink");
						mapImage.classList.remove("expand");
					}
					isMapOpen = !isMapOpen;
				});
			});
		</script>
		<script>
			// Handle the icons in the vendor lists
			const vendorItems = document.querySelectorAll(".vendor-items li");

			vendorItems.forEach((item) => {
				const newLi = document.createElement("li");
				const icon = document.createElement("i");
				newLi.className = "kilter";
				icon.className = "fa-sharp fa-solid fa-sparkle";
				newLi.appendChild(icon);
				item.after(newLi);
			});
		</script>
		<script>
			// Handle the Sponsor Logo scrolling
			document.addEventListener("DOMContentLoaded", function () {
				const firstCopy = document.getElementById("first-copy");
				const secondCopy = document.getElementById("second-copy");

				let scrollSpeed = 0.05;
				let firstPos = 0;
				let secondPos = -100;

				const animateScroll = () => {
					firstPos += scrollSpeed;
					secondPos += scrollSpeed;

					if (firstPos >= 100) {
						firstPos = secondPos - 100;
					}

					if (secondPos >= 100) {
						secondPos = firstPos - 100;
					}

					firstCopy.style.transform = `translateX(${firstPos}%)`;
					secondCopy.style.transform = `translateX(${secondPos}%)`;

					requestAnimationFrame(animateScroll);
				};

				const animationFrameId = requestAnimationFrame(animateScroll);

				// Cleanup function to stop animation
				window.addEventListener("unload", () => {
					cancelAnimationFrame(animationFrameId);
				});
			});
		</script>
	</body>
</html>
