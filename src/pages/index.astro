		<script>
			// Handle the Sponsor Logo scrolling
			document.addEventListener("DOMContentLoaded", function () {
				const firstCopy = document.getElementById("first-copy");
				const secondCopy = document.getElementById("second-copy");

				let scrollSpeed = 0.05;
				let firstPos = 0;
				let secondPos = -100;

				const animateScroll = () => {
					firstPos += scrollSpeed;
					secondPos += scrollSpeed;

					if (firstPos >= 100) {
						firstPos = secondPos - 100;
					}

					if (secondPos >= 100) {
						secondPos = firstPos - 100;
					}

					firstCopy.style.transform = `translateX(${firstPos}%)`;
					secondCopy.style.transform = `translateX(${secondPos}%)`;

					requestAnimationFrame(animateScroll);
				};

				const animationFrameId = requestAnimationFrame(animateScroll);

				// Cleanup function to stop animation
				window.addEventListener("unload", () => {
					cancelAnimationFrame(animationFrameId);
				});
			});
		</script>
